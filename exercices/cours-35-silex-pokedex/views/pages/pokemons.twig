{{ include('partials/header.twig') }}

<h2 class="mb-4">Pokemons</h2>

<div class="d-flex flex-wrap">

    {% for _pokemon in pokemons %}
        <a href="{{ url('pokemon', {slug: _pokemon.slug}) }}" class="card w-25 text-center">
            <div class="card-header">
                {{ _pokemon.name }}
            </div>
            <div class="card-block">
                <img src="{{ global.request.basepath }}/uploads/pokemons/{{ _pokemon.id }}.png" alt="" width="100%" style="image-rendering: pixelated;">
            </div>
        </a>
    {% endfor %}

</div>

{{ include('partials/footer.twig') }}