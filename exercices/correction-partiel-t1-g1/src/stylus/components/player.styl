.player
	position absolute
	top 50%
	left 50%
	width 775px
	height 575px
	margin-top -287px
	margin-left -387px
	overflow hidden
	font-family 'Quicksand', sans-serif
	font-size 13px
	box-shadow 0px 0px 50px rgba(0, 0, 0, 0.3)
	
	.cover
		position absolute
		top 0
		left 0
		width 300px
		height 300px
		overflow hidden
		
	.informations
		position absolute
		top 0
		right 0
		width 475px
		height 300px
		overflow hidden
		background #c8c5d1
		padding-top 100px
		padding-left 30px
		
		.title
			margin-bottom 5px
			font-size 26px
			color #6e5e61
		
		.sub-title
			margin-bottom 8px
			color #6e5e61
		
		.songs-count
			font-size 10px
			color #ffffff
		
		.release-informations
			position absolute
			bottom 0
			left 0
			width 100%
			height 65px
			background #dad8e4
			padding-left 30px
			line-height 65px
			font-size 10px
			font-weight bold
			color #6e5e61
			
			.play-button
				position absolute
				top -30px
				right 30px
				width 60px
				height 60px
				border-radius 30px
				background #dad8e4
				box-shadow 0px 3px 10px rgba(0, 0, 0, 0.3)				
		
	.description
		position absolute
		top 300px
		left 0
		width 300px
		height 210px
		overflow hidden
		background #eef5f7
		padding 30px

		.title
			margin-bottom 25px
			font-weight bold
			color #6e5e61
		
		p
			line-height 1.4em
			font-size 10px
			color #6e5e61
	
	.playlist
		position absolute
		top 300px
		left 300px
		width 475px
		height 210px
		overflow scroll
		background #ffffff
		
		.song
			display block
			height 65px
			line-height 65px
			
			.index
				float left
				width 65px
				text-align center
			
			.title
				float left
				width 345px
			
			.duration
				float left
				width 65px
				text-align center
		
	.controls
		position absolute
		bottom 0
		left 0
		width 100%
		height 65px
		overflow hidden
		background #eef5f7
		
		.bar
			position absolute
			top 0
			left 0
			width 100%
			height 3px
			background #dad8e4
			transform scale(0.5)
			transform-origin 0 0