.player
	position absolute
	top 50%
	left 50%
	margin-top -287px
	margin-left -387px
	width 775px
	height 575px
	overflow hidden
	box-shadow 0px 0px 40px rgba(0, 0, 0, 0.3)
	color #6e5e61
	
	.cover
		position absolute
		top 0
		left 0
		width 300px
		height 300px
		overflow hidden
		
	.informations
		position absolute
		top 0
		left 300px
		right 0
		height 300px
		padding-top 90px
		padding-left 30px
		background #c8c5d1
		
		.title
			margin-bottom 5px
			font-size 26px
		
		.sub-title
			margin-bottom 5px
			
		.songs-count
			color #ffffff
			font-size 10px
			
		.release
			position absolute
			bottom 0
			left 0
			width 100%
			height 65px
			line-height 65px
			padding-left 30px
			background #dad8e4
			
			.button.play
				position absolute
				top -30px
				right 30px
				width 60px
				height 60px
				background #dad8e4
				border-radius 30px
				box-shadow 0px 5px 10px rgba(0, 0, 0, 0.3)
		
	.description
		position absolute
		top 300px
		left 0
		width 300px
		height 210px
		background #eef5f7
		padding 30px
		
		.title
			font-weight bold
			margin-bottom 25px
			
		.text
			font-size 10px
			line-height 1.4em
		
	.playlist
		position absolute
		top 300px
		left 300px
		right 0
		height 210px
		background #ffffff
		overflow scroll
		
		.song
			display block
			text-decoration none
			height 65px
			line-height 65px
			transition background 0.15s
			
			.index
				display block
				float left
				width 65px
				text-align center
				
			.name
				display block
				float left
				width 345px
				
			.duration
				display block
				float left
				width 65px
				text-align center
				
			&:hover
				background #ddd
		
	.controls
		position absolute
		bottom 0
		left 0
		width 100%
		height 65px
		background #eef5f7
		